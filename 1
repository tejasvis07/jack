# --- Import required libraries ---
import numpy as np
import skfuzzy as fuzz
import matplotlib.pyplot as plt
from skfuzzy import control as ctrl

# --- Define fuzzy variables ---
temperature = ctrl.Antecedent(np.arange(0, 41, 1), 'Temperature (°C)')
fan_speed = ctrl.Consequent(np.arange(0, 101, 1), 'Fan Speed (%)')

# --- Define membership functions ---
temperature['cold'] = fuzz.trimf(temperature.universe, [0, 0, 20])
temperature['warm'] = fuzz.trimf(temperature.universe, [15, 25, 35])
temperature['hot'] = fuzz.trimf(temperature.universe, [30, 40, 40])

fan_speed['slow'] = fuzz.trimf(fan_speed.universe, [0, 0, 50])
fan_speed['medium'] = fuzz.trimf(fan_speed.universe, [25, 50, 75])
fan_speed['fast'] = fuzz.trimf(fan_speed.universe, [50, 100, 100])

# --- Visualize membership functions ---
plt.figure(figsize=(10, 4))
temperature.view()
fan_speed.view()

# --- Define fuzzy rules ---
rule1 = ctrl.Rule(temperature['cold'], fan_speed['slow'])
rule2 = ctrl.Rule(temperature['warm'], fan_speed['medium'])
rule3 = ctrl.Rule(temperature['hot'], fan_speed['fast'])

# --- Create control system ---
fan_ctrl = ctrl.ControlSystem([rule1, rule2, rule3])
fan_sim = ctrl.ControlSystemSimulation(fan_ctrl)

# --- User input & computation ---
try:
    user_temp = float(input("Enter the temperature in °C (0–40): "))
    if not 0 <= user_temp <= 40:
        print("Temperature out of range! Please enter between 0 and 40.")
    else:
        fan_sim.input['Temperature (°C)'] = user_temp
        fan_sim.compute()

        print(f"\n Temperature input: {user_temp:.1f} °C")
        print(f" Calculated fan speed: {fan_sim.output['Fan Speed (%)']:.2f} %")

        # Show simulation result
        fan_speed.view(sim=fan_sim)
        plt.show()

except ValueError:
    print(" Invalid input! Please enter a numeric value.")
